server {
       listen 80 default_server;
       listen [::]:80 default_server;
       server_name _;

       location / {
               try_files $uri $uri/ =404;
               root /var/www/html;
               index index.html;
       }

       location /auth {
                auth_basic "Administratorâ€™s Area";
                auth_basic_user_file /etc/nginx/.htpasswd;
                root /var/www/html/;
                try_files $uri $uri/ /auth/index.html;
       }
}